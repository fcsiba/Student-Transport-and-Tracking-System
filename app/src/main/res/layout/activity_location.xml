<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/tools"
    android:background="@drawable/gradient_app_theme"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clUserProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        <LinearLayout
            android:id="@+id/llLocationUserProfilePicture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:background="@drawable/ic_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLocationUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/llLocationUserProfilePicture"
            android:layout_marginStart="5dp">
            <TextView
                android:id="@+id/tvLocationUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demo User"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IBA"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLocationUserName" />
        </LinearLayout>

        <Button
            android:id="@+id/btLocationScreenSettingsButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Settings"
            android:textSize="11sp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/llLocationUserName"
            app:layout_constraintTop_toTopOf="parent"/>
        <Button
            android:id="@+id/btLocationScreenLogoutButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Logout"
            android:textSize="11sp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/llLocationUserName"
            app:layout_constraintTop_toBottomOf="@id/btLocationScreenSettingsButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/rlSeatInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/clUserProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tvStopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Point 1"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/tvStopBusInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bus Number: GCC-2989"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            android:textSize="15sp"
            android:layout_below="@id/tvStopName"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tvStopSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pick-up schedule: 7:30 A.M, 8:30 A.M."
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            android:textSize="15sp"
            android:layout_below="@id/tvStopBusInfo"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btReserveSeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reserve"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvStopSchedule"
            android:layout_marginTop="15dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTrackStudentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track Your Student"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:gravity="center"
        android:textAllCaps="true"
        android:visibility="gone"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintTop_toBottomOf="@id/clUserProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mapView"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/rlSeatInfo"
        app:layout_constraintBottom_toTopOf="@id/tvBusInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvBusSeatCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20 / 50"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:textSize="40sp"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/mapView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/llSeatsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvBusSeatCount">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Reserved\nSeats"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Total\nSeats"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginStart="30dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvBusInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus Number: GCC-2989"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fabMapActivityBackButton"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fabMapActivityBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:fab_colorNormal="#D2A07B"
        app:fab_colorPressed="@color/colorPrimary"
        app:rippleColor="@color/colorPrimaryDark"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>